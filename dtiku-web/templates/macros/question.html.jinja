{% macro answer_collapse_action() %}
<script>
    $(function () {
        $(document).on('hidden.bs.collapse shown.bs.collapse', '.question-wrapper .collapse', function (e) {
            const wrapper = $(this).closest(".question-wrapper");
            if (e.type === "shown") {
                wrapper.addClass("show-answer");
            } else {
                wrapper.removeClass("show-answer");
            }
        });
    });
</script>
{% endmacro answer_collapse_action %}

