<!doctype html>
<html lang="zh">

<head>
    {% call general::meta() %}
    <title>{{paper.title}}{%if mode == "show_answer"%}Á≠îÊ°à{%endif%} | {{global.config.site_title}}</title>
    {% call general::headerfiles() %}
    {% if mode == "exercise" %}
    <style>
        #xc-report tr:last-child {
            border-top: 1px dashed grey;
            font-weight: bold;
        }

        .answer-paper-wrapper {
